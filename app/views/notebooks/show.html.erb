<div class="main-content">
  <div id="menubar" class="topbar">
    <div class="right">
      <a href="" class="btn">Filter</a>
      <div class="btn_group">
        <a href="" class="btn">Grid</a>
        <a href="" class="btn">List</a>
      </div>
      <a href="" class="btn">Edit</a>
    </div>
    <div class="left">
      <%= link_to "Take Notes", "/notes/new", :class => "btn" %>
      <%= link_to 'New Notebook', new_notebook_path, :class => "btn" %>
    </div>
    <div class="middle">
      <span>New Notebook</span>
    </div>
  </div>
  <div class="container-fluid">
    <div class="center">
      <h2><%= @notebook.name %></h2>
      <ul>
        <% @notebook.notes.each do |note| %>
          <li><%= link_to note.created_at, edit_note_path(note) %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
