<%= form_for @notebook, :remote => true, :html => {:class => "form-stacked", :id => "edit_notebook_form", :'data-type' => "html"} do |f| %>
  <% if @notebook.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@notebook.errors.count, "error") %> prohibited this notebook from being saved:</h2>

      <ul>
      <% @notebook.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="clearfix">
    <%= f.label :name %>
    <div class="input"><%= f.text_field :name %></div>
  </div>
  <div class="clearfix">
    <%= f.label :course %>
    <div class="input"><%= select :notebook, :course_id, @current_user.offerings.collect {|o| [o.course.title, o.course.id]}, {:prompt => true}, {:class => "chzn-select"} %></div>
  </div>
  <div class="clearfix">
    <div class="input">
      <ul class="inputs-list">
        <li>
          <label>
            <%= f.check_box :shareable %><span>Shared</span>
          </label>
        </li>
      </ul>
    </div>
  </div>
  <div>
    <%= f.submit :class => "btn primary" %>
    <%= link_to 'Cancel', "#", :class => "btn cancel_popover", "data-link-id" => @modal_link_id %>
  </div>
<% end %>
