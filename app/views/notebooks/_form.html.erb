<% @notebook ||= notebook %>
<%= form_for @notebook, :remote => true, :html => {:class => "form-stacked", :id => "edit_notebook_form", :'data-type' => "html"} do |f| %>
  <div class="popover-body"><% if @notebook.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@notebook.errors.count, "error") %> prohibited this notebook from being saved:</h2>

      <ul>
      <% @notebook.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="clearfix">
    <%= f.label :name %>
    <div class="input"><%= f.text_field :name %></div>
  </div>
  <div class="clearfix">
    <%= f.label :course %>
    <%= @notebook.course_id %>
    <div class="input"><%= select :notebook, :course_id, @current_user.offerings.collect {|o| [o.course.title, o.course.id]}, {:selected => @notebook.course_id, :prompt => true}, {:class => "chzn-select"} %></div>
  </div>
  
  <div class="clearfix">
    <div class="input">
      <div class="input-prepend">
        <label class="add-on">
          <%= f.check_box :shareable, checked: "checked", class: "activation_check_box" %>
        </label>
        <%= text_field_tag nil, nil, placeholder: "Share this notebook", class: "prepended_checkbox disabled", disabled: true, style: "width: 150px;" %>
      </div>
    </div>
  </div></div>
  <div class="popover-footer">
    <%= f.submit :class => "btn primary" %>
    <%= link_to 'Cancel', "#", :class => "btn cancel_popover", "data-link-id" => @modal_link_id %>
  </div>
<% end %>
