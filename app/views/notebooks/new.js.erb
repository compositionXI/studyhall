var button = $("#new_notebook_button")
$("#new_notebook_button").popover = null;
$("#new_notebook_button").popover({trigger: "manual",
                                  placement: "below-right",
                                  offset: 10,
                                  html: true,
                                  help: function(){return "<%=j render :partial => 'help' %>";},
                                  title: function(){return "New Notebook";},
                                  content: function(){return "<%=j render :partial => 'notebooks/new' %>";}});
$("#new_notebook_button").popover("show");
$("#new_notebook input[type='text']").first().focus();
$("#notebook_course_id").chosen();
$(".popover").delegate("a.help_button","click",function(e){
  button.popover("showHelp");
  e.preventDefault();
});
$(".popover").delegate("a.close_help_button","click",function(e){
  button.popover("hideHelp");
  e.preventDefault();
});
initWindowResize();