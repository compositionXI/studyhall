<%= form_for [:admin, @offering], :html => {:class => "form-stacked"} do |f| %>
  <% if @offering.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@offering.errors.count, "error") %> prohibited this admin_offering from being saved:</h2>

      <ul>
      <% @offering.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="clearfix">
    <%= f.label :term %>
    <div class="input"><%= f.text_field :term %></div>
  </div>
  
  <div class="clearfix">
    <%= f.label :school %>
    <div class="input"><%= collection_select :offering, :school_id, School.all, :id, :name, :prompt => true %></div>
  </div>
  
  <div class="clearfix">
    <%= f.label :course %>
    <div class="input"><%= collection_select :offering, :course_id, Course.all, :id, :title, :prompt => true %></div>
  </div>
  
  <div class="clearfix">
    <%= f.label :instructor %>
    <div class="input"><%= collection_select :offering, :instructor_id, Instructor.all, :id, :full_name, :prompt => true %></div>
  </div>

  <div>
    <%= f.submit :class => "btn primary" %>
    <%= link_to 'Back', admin_offerings_path, :class => "btn" %>
  </div>
<% end %>
