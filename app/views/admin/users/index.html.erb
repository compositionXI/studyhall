<%= link_to "Create New User", new_admin_user_path, :class => "btn" %>

<table class="zebra-striped">
  <thead>
    <th>Name</th>
    <th>Email</th>
    <th>Gender</th>
    <th>School</th>
    <th></th>
    <th></th>
    <th></th>
  </thead>
  <tbody>
    <% @users.each do |u| %>
      <tr>
        <td><%= u.name%></td>
        <td><%= u.email %></td>
        <td><%= u.gender %></td>
        <td><%= u.school.try(:name) %></td>
        <td><%= link_to 'Show', admin_user_path(u), :class => "btn" %></td>
        <td><%= link_to 'Edit', edit_admin_user_path(u), :class => "btn" %></td>
        <td><%= link_to 'Destroy', admin_user_path(u), confirm: 'Are you sure?', method: :delete, :class => "btn" %></td>
      </tr>
    <% end %>
  </tbody>
<table>
