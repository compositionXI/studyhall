<h1>Listing calendars</h1>

<table>
  <tr>
    <th>Gmail address</th>
    <th>Gmail password</th>
    <th>Schedule</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @calendars.each do |calendar| %>
  <tr>
    <td><%= calendar.gmail_address %></td>
    <td><%= calendar.gmail_password %></td>
    <td><%= calendar.schedule_id %></td>
    <td><%= link_to 'Show', calendar %></td>
    <td><%= link_to 'Edit', edit_calendar_path(calendar) %></td>
    <td><%= link_to 'Destroy', calendar, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

