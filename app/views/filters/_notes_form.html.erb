<%= form_for @filter, :html => {:class => "form-stacked"} do |f| %>
  <%= f.hidden_field :model_name %>
  <div class="clearfix">
    <div class="input">
      <ul class="inputs-list">
        <li>
          <label>
            <%= f.check_box :notes, checked: "checked" %><span>Notes</span>
          </label>
        </li>
      </ul>
    </div>
  </div>
  <div class="clearfix">
    <div class="input">
      <ul class="inputs-list">
        <li>
          <label>
            <%= f.check_box :notebooks, checked: "checked" %><span>Notebooks</span>
          </label>
        </li>
      </ul>
    </div>
  </div>
  <div class="clearfix">
    <%= label_tag "Courses" %>
    <div class="input select_post_attribute">
      <div class="input-prepend">
        <label class="add-on">
          <%= check_box_tag nil, nil, false, :class => "activation_check_box" %>
        </label>
        <%= f.collection_select :course_id, current_user.school.courses, :id, :title, {:prompt => "Choose class"}, {:class => "chzn-select"} %>
      </div>
    </div>
    <%= label_tag "Title" %>
    <div class="input select_post_attribute">
      <div class="input-prepend">
        <label class="add-on">
          <%= check_box_tag nil, nil, false, :class => "activation_check_box" %>
        </label>
        <%= f.text_field :name %>
      </div>
    </div>
    <%= label_tag "Date Created" %>
    <div class="input select_post_attribute">
      <div class="input-prepend">
        <label class="add-on">
          <%= check_box_tag nil, nil, false, :class => "activation_check_box" %>
        </label>
        <%= f.text_field :created_at, class: "date_picker" %>
      </div>
    </div>
  </div>
  <div class="clearfix"></div>
  <%= f.submit "Filter", :class => "btn primary" %>
  <%= link_to 'Cancel', "#", :class => "btn cancel_popover", "data-link-id" => "filter_button" %>
<% end %>