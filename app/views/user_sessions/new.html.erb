<fieldset>
  <legend>Login</legend>
<%= form_for @user_session, :url => {:action => "create"}, :html => {:class => "form-stacked"} do |f| %>
    <div class="clearfix">
      <%= f.label :login %>
      <div class="input"><%= f.text_field :login %></div>
    </div>
    <div class="clearfix">
      <%= f.label :password%>
      <div class="input"><%= f.password_field :password%></div>
    </div>
    <div class="clearfix">
      <%= f.label :remember_me%>
      <div class="input"><%= f.check_box :remember_me %></div>
    </div>
    <div>
      <%= f.submit "Login", :class => "btn primary" %>
      <%= link_to "Forgot Password", new_password_reset_path, :class => "btn square" %>
      <%= link_to "Create New Account", new_user_path, :class => "btn" if @current_user.nil? || @current_user.admin? %>
    </div>
<% end %>
</fieldset>