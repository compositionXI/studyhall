<% if flash[:notice] %>
  <div class="alert alert-message success span7">
    <a class="close" href="#">Ã—</a>
    <%= flash[:notice] %>
  </div>
<% end %>

<fieldset>
  <%= link_to "Log in using Facebook", "/auth/facebook", id: "facebook_login" %>
  <legend>Welcome Back!</legend>
  <%= form_for @user_session, :url => {:action => "create"}, :html => {:class => "form-stacked"} do |f| %>
    <%= f.error_messages %>
    <div class="clearfix">
      <%= f.label :email %>
      <div class="input"><%= f.text_field :email %></div>
    </div>
    <div class="clearfix" style="position:relative">
      <%= f.label :password%>
      <div class="input"><%= f.password_field :password%></div>
    </div>
    <div class="clearfix">
      <%= link_to "Forgot?", new_password_reset_path, :id => "forgot_link" %>
      <div class="input checkbox"><%= f.check_box :remember_me %></div>
      <%= f.label :remember_me%>
    </div>
    <div>
      <%= f.submit "Login", :class => "btn primary" %>
      <%= link_to "Sign Up", new_user_path, :class => "" if @current_user.nil? || @current_user.admin? %>
    </div>
  <% end %>
</fieldset>
