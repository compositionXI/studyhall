<% unless comment.new_record? || current_user.blocked?(comment.user)%>
  <li class="clearfix">
    <div class="class_post">
      <div class="user_photo left">
        <%= link_to image_tag(comment.user.photo_url(:medium)), comment.user %>
      </div>
      <div class="post_details left">
        <%= link_to comment.user.name, comment.user %> - <%= comment.created_at.strftime("%a, %b %d %Y at %I:%M%p") %> <br/>
        <%= comment.text %>
      </div>
      <div class="post_options right">
        <ul class="unstyled">
          <% unless comment.user == current_user %>
            <li><%= link_to "Block", user_block_path(:user_id => current_user, :blocked_user_id => comment.user.id), :confirm => "Are you sure?" %></li>
            <li><%= link_to "Report", class_comment_path(comment.offering, comment, :"comment[reported]" => true, :reported => true), remote: true, method: :put, :confirm => "Are you sure?" %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </li>
<% end %>
