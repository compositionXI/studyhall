<ul class="unstyled">
  <% buddies.each do |buddy| %>
    <li class="clearfix">
      <div class="left">
        <%= link_to image_tag(buddy.avatar.url(:medium)), buddy, :title => buddy.name %>
      </div>
      <div class="left">
        <%= link_to buddy.name, buddy %> <br/>
        <%= buddy.school.name %>
      <div>
    </li>
  <% end %>
</ul>