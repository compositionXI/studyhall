<div class="modal-header">
  <h3><%= title %></h3>
</div>
<div class="modal-body">
  <ul class="unstyled">
    <% users.each do |user| %>
      <li class="clearfix">
        <div class="left">
          <%= link_to image_tag(user.photo_url(:medium)), user, :title => user.name %>
        </div>
        <div class="left">
          <%= link_to user.name, user %> <br/>
          <%= user.school.name %>
        <div>
      </li>
    <% end %>
  </ul>
</div>
<div class="modal-footer">
  <a href="#" class="btn close_modal">Close</a>
</div>
