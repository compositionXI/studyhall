<%= form_for @note, :html => {:class => "form-stacked", :id => "upload_note_form", :'data-type' => "html"} do |f| %>
  <%= f.hidden_field :upload, :value => "true" %>
  <div class="popover-body"><%= f.hidden_field :content, :id => "note_content_hidden_field" %>
    <div id="upload_tabs">
      <ul class="tabs">
        <li data-rel="1" class="active"><a data-rel="document_tab" href="#">Doc Properties</a></li>
        <li data-rel="1"><a data-rel="sharing_tab" href="#">Sharing Properties</a></li>
      </ul>
      <ul id="document_tab" class="tab_contents">
        <%= render :partial => "shared/upload_form_document_properties", :locals => {:f => f} %>
      </ul>
      <ul id="sharing_tab" class="tab_contents" style="display:none">
        <%= render :partial => "shared/upload_form_sharing_properties", :locals => {:f => f} %>
      </ul>
    </div>
  </div>
  <div class="popover-footer clearfix">
    <%= f.submit 'Done', :class => "btn primary" %>
    <%= link_to 'Cancel', "#", :class => "btn cancel_popover", "data-link-id" => @modal_link_id %>
  <span id="error_field" style="padding-left:5px"></span>
  </div>
<% end %>
