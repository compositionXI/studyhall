<%= form_for @room, :url => rooms_path(@room), :html => {:class => "form-stacked"} do |f| %>
	<div class="clearfix">
	  <%= f.label :name %>
    <div class="input"><%= f.text_field :name %></div>
  </div>
  <div class="clearfix">
    <%= f.label :public %>
    <div class="input"><%= f.check_box	:public %> (You'll want to check this.)</div>
  </div>
	<%= f.submit :class => "btn primary" %>
<% end %>