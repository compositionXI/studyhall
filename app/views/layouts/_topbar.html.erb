<div class="topbar">
  <div class="fill">
    <div class="container">
      <h3><%= link_to image_tag("/assets/small_icon.png", :alt => "StudyHall"), root_path %></h3>
      <ul class="nav">
        <li><%= link_to "Contact", new_contact_path %></li>
        <% @static_pages.each do |static_page| %>
          <li><%= link_to static_page.title, page_path(static_page.slug) %></li>
        <% end %>
      </ul>
      <ul class="nav secondary-nav">
        <li class="avatar_thumb"></li>
        <li class="dropdown">
          <% if @current_user %>
            <%= link_to(image_tag(@current_user.avatar_url(:thumb))+"  #{@current_user.name}", "#", :class => "dropdown-toggle")  %>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", @current_user %></li>
              <li><%= link_to "Study", study_sessions_path %></li>
              <%- if @current_user.admin? %>
                <%= render :partial => "/layouts/admin_options"%>
              <% end %>
              <li class="divider"></li>
              <li><%= link_to "Logout", logout_path %></li>
            </ul>
          <% else %>
            <li><%= link_to "Login", root_path %></li>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>