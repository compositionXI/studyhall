<header class="topbar">
  <div class="fill">
    <div class="container<%= @layout == "full_width" ? "-fluid" : "" %>">
      <h1 class="logo"><%= link_to "StudyHall Home", root_path %></h1>
      <nav class="nav">
        <ul>
          <li id="nav_home" class="current"><a href="#"><span>Home</span></a></li>
          <li id="nav_studyhalls"><a href="#"><span>StudyHalls</span></a></li>
          <li id="nav_notes"><a href="#"><span>Take Notes</span></a></li>
          <li id="nav_profile" class="current"><a href="#"><span>Edit Profile</span></a></li>
          <li id="nav_inbox"><a href="#"><small>5</small><span>Inbox</span></a></li>
          <li id="nav_account" class="current"><a href="#"><span>Your Account</span></a></li>
        <!-- <li><%= link_to "Contact", new_contact_path %></li>
                <% @static_pages.each do |static_page| %>
                  <li><%= link_to static_page.title, page_path(static_page.slug) %></li>
                <% end %> -->
        
        </ul>
      </nav>
      <form action="">
        <input type="text" placeholder="Search">
      </form>
      <ul class="nav secondary-nav">
        <li class="avatar_thumb"></li>
        <li class="dropdown">
          <% if @current_user %>
            <%= link_to(image_tag(@current_user.avatar_url(:thumb))+"  #{@current_user.name}", "#", :class => "dropdown-toggle")  %>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", @current_user %></li>
              <li><%= link_to "Study", study_sessions_path %></li>
              <li><%= link_to "Notes", notebooks_path %></li>
              <li><%= link_to "Messages", messages_path %></li>
              <li><%= link_to "Classes", classes_path %></li>
              <%- if @current_user.admin? %>
                <%= render :partial => "/layouts/admin_options"%>
              <% end %>
              <li class="divider"></li>
              <li><%= link_to "Logout", logout_path %></li>
            </ul>
          <% else %>
            <li><%= link_to "Login", root_path %></li>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</header>
<div class="gridbar">
    <div class="container"><h3>Title and action statements</h3>
    <div class="buttons">
      <a class="btn small primary" href="#">Primary action</a>
      <a class="btn small" href="#">Action</a>
    </div></div>
</div>
