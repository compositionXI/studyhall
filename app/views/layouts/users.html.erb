<% content_for :action_bar do %>
  <div class="gridbar">
      <div class="container">
        <% if params[:action] == "show" %>
          <div class="buttons_left">
            <%= link_to "Follow", "#", :class => "btn small primary", :title => "Follow"%>
            <%= link_to "Message", "#", :class => "btn small", :title => "Message" %>
          </div>
        <% end %>
        <h3><%= flash[:action_bar_message] %></h3>
        <div class="buttons_right">
          <% if params[:action] == "show" %>
            <%= link_to "Invite to a Studyhall", "#", :class => "btn small", :title => "Invite to a Studyhall" %>
          <% elsif params[:action] == "edit" %>
            <%= link_to "All Done!", @user, :class => "btn small", :title => "All Done!" %>
          <% end %>
        </div>
      </div>
  </div>
<% end %>
<%= render :template => 'layouts/application' %>