<div id="menubar" class="topbar notes">
  <div class="right">
    <% if current_user.can_edit?(@note) %>
      <%= link_to "Delete", note_path(@note), method: "DELETE", class: "btn", :confirm => "Are you sure?" %>
      <%= link_to "Edit", edit_note_path, class: "btn" %>
    <% end %>
  </div>
  <div class="left">
    <%= link_to "X", edit_note_back_path, :class => "btn" %>
  </div>
  <div class="middle">
    <%= @note.name %>
  </div>
</div>
<div class="container">
  <pre id="note_content"><%= @note.content.html_safe %></pre>
</div>
