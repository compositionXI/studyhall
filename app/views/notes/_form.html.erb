<%= form_for @note, :remote => true, :html => {:class => "form-stacked", :id => "edit_note_form", :'data-type' => "html"} do |f| %>
  <div class="clearfix">
    <%= f.label :name %>
    <div class="input"><%= f.text_field :name %></div>
  </div>
  <div class="clearfix">
    <div class="input">
      <ul class="inputs-list">
        <li>
          <label>
            <%= f.check_box :shareable %><span>Shared</span>
          </label>
        </li>
      </ul>
    </div>
  </div>
  <div>
    <%= f.submit :class => "btn primary" %>
    <%= link_to 'Cancel', "#", :class => "btn cancel_popover", "data-link-id" => @modal_link_id %>
  </div>
<% end %>
