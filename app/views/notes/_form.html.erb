<% url = @note.new_record? ? notes_path(:format => @remote ? :js : :html) : note_path(@note, :format => @remote ? :js : :html) %>
<%= form_for @note, url: url, :remote => @remote, :html => {:class => "form-stacked", :id => "edit_note_form", :'data-type' => "html"} do |f| %>
  <div class="popover-body"><%= f.hidden_field :content, :id => "note_content_hidden_field" %>
  <div class="clearfix">
    <%= f.label :name %>
    <div class="input"><%= f.text_field :name %></div>
  </div>
  <div class="clearfix">
    <%= f.label "Save To Notebook" %>
    <div class="input">
      <%= collection_select :note, :notebook_id, current_user.notebooks, :id, :name, {:include_blank => "Choose a notebook"}, {:class => "chzn-select", "data-placeholder" => "Choose a notebook"} %>
    </div>
  </div>
  <div class="clearfix">
    <div class="input">
      <div class="input-prepend">
        <label class="add-on">
          <%= f.check_box :shareable, checked: "checked", class: "activation_check_box" %>
        </label>
        <%= text_field_tag nil, nil, placeholder: "Share this notebook", class: "prepended_checkbox disabled", disabled: true, style: "width: 150px;" %>
      </div>
    </div>
  </div></div>
  <div class="popover-footer clearfix">
    <%= f.submit 'Done', :class => "btn primary" %>
    <%= link_to 'Cancel', "#", :class => "btn cancel_popover", "data-link-id" => @modal_link_id %>
    <%= f.submit "Quick Save", :class => 'btn primary quick_save_btn' %>
  </div>
<% end %>
