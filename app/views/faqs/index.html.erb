<h1>Listing faqs</h1>

<ul id="faq-list">
  <% @faqs.each do |faq| %>
  <li>
    <h3>Question</h3>
    <%- if @current_user && @current_user.admin?%>
      <div class="admin-controls">
        <%= link_to 'Show', faq %> 
        <%= link_to 'Edit', edit_faq_path(faq) %> 
        <%= link_to 'Destroy', faq, confirm: 'Are you sure?', method: :delete %>
      </div>
    <% end %>
  </li>
  <li class="clearfix"><%= faq.question %></li>
  <li>
    <h4>Answer</h4>
  </li>
  <li><%= faq.answer %></li>
<% end %>
</table>

<br />

<%- if @current_user && @current_user.admin?%>
  <%= link_to 'New Faq', new_faq_path %>
<% end %>
