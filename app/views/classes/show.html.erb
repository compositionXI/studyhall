<aside class="sidebar">
  <section>
    <header>
      <h1><big><%= @course.department %><%= @course.number %></big></h1>
      <h1><%= @course.title %></h1>
    </header>
  </section>
  <section>
    <header>
      <h1 class="left">Professor: <small><%= "#{@class.instructor.first_name} #{@class.instructor.last_name}" %></small></h1>
    </header>
  </section>
  <section class="buddies">
    <header>
      <h1 class="left">Classmates <small>(<%= @classmates.count %>)</small></h1>
      <%= link_to "View All >>", class_classmates_path(:class_id => @class.id), :remote => true, :class => "modal_button", :'data-type' => 'html' %>
    </header>
      <ul>
        <% if @classmates.any? %>
          <% @classmates.each do |mate| %>
            <li><%= link_to image_tag(mate.avatar.url(:medium)), mate, :title => mate.name %></li>
          <% end %>
        <% else %>
          <li></li>
        <% end %>
      </ul>
  </section>
  <%= render :partial => "shared/buddies_preview", :locals => {:user => @current_user} %>
  <%= link_to "Drop this class", "#"%>
</aside>
<section class="course_activity">
  <header>
    <h1 class="left">Course Activity</h1><%= link_to "SHARE WITH THE CLASS", "#", :class => "btn small right" %>
  </header>
  <div class="course_activity_list">
    
  </div>
</section>

<div id="classmate_list_modal" class="modal">
  <div class="modal-header">
    <h3>Classmates</h3>
  </div>
  <div class="modal-body">
  </div>
  <div class="modal-footer">
    <a href="#" class="btn close_modal">Close</a>
  </div>
</div>