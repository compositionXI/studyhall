<fieldset>
  <legend>Study Sessions</legend>
</fieldset>

<%= link_to "Add New Class", new_class_path, :class => "btn" %>

<table>
  <thead>
    <th>Title</th>
    <th>Number</th>
    <th>School</th>
    <th>Instructor</th>
    <th>Section</th>
  </thead>
  <tbody>
    <% @classes.each do |c| %>
    <tr>
      <td><%= c.course.title %></td>
      <td><%= c.course.number %></td>
      <td><%= c.school.name %></td>
      <td><%= c.instructor.last_name %>, <%= c.instructor.first_name %></td>
      <td><%= c.section %></td>
    </tr>
    <% end %>
  </tbody>
</table>