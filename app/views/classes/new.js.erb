var button = $("#<%=j @modal_link_id %>");

var placement = "below";
var length = $('.course_list').children().length;
if(1 == length % 4) {
  placement = "below-left";
} else if(0 == length % 4) {
  placement = "below-right";
}

button.popover({
  trigger: "manual",
  placement: placement,
  offset: 10,
  horizontalOffset: 25,
  html: true,
  title: function(){return "Add A New Course";},
  content: function(){return "<%=j render :partial => 'form', :locals => {:enrollment => @enrollment} %>";}
});

button.popover("show");
$("select.chzn-select").chosen();
styleFileInputs();
$("#new_class_post .fake-file").css({position: "relative", top: "-34px"});

initWindowResize();
