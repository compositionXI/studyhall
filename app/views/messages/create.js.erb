<% if @success %>
  $("#message_new").animate({opacity: 0},1000)
  setTimeout(function(){$("#message_new").parent().html("<div class=\"alert-message success\">Your message was sent.</div>")}, 500);
  setTimeout(function(){$("#new_message_button").popover("hide")},2000);
<% else %>
  $("#message_new #error_explanation").html("<p><strong>Uh-oh!</strong> There was a problem. Please fill out all fields and try again.</p>");
  $("#message_new #error_explanation").removeClass("hidden");
<% end %>
