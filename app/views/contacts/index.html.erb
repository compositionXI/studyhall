<fieldset>
  <legend>Contacts</legend>
</fieldset>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Company name</th>
      <th>Phone</th>
      <th>Message</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.email %></td>
        <td><%= contact.company_name %></td>
        <td><%= contact.phone %></td>
        <td><%= contact.message %></td>
        <td><%= link_to 'Show', contact, :class => "btn" %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact), :class => "btn" %></td>
        <td><%= link_to 'Destroy', contact, confirm: 'Are you sure?', method: :delete, :class => "btn" %></td>
      </tr>
    <% end %>
  <tbody>
</table>

<%= link_to 'New Contact', new_contact_path, :class => "btn" %>
