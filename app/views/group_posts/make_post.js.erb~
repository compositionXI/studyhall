var button = $("#<%=j @link_id %>");
button.popover({
  trigger: "manual",
  placement: "below-left",
  offset: 10,
  horizontalOffset: 25,
  html: true,
  title: function(){return "Share With This Group";},
  content: function(){return "<%=j render :partial => 'form' :locals => {:group_post => @group_post} %>";}
});
button.popover("show");
