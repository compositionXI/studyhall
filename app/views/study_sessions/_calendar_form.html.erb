<%= form_for(@study_session) do |f| %>
 <div class="popover-body form-stacked">
  <p>Add a study session to your calendar. It's great to procrastinate.</p> <br/>
  <div class="clearfix">
    <%= f.label :gmail_address, "Gmail Address"%>
    <%= f.text_field :gmail_address %>
  </div>
  <div class="clearfix">
    <%= f.label :gmail_password, "Password"%>
    <%= f.password_field :gmail_password %>
  </div>
  <div class="clearfix">
    <%= f.label :time_start %>
    <%= f.text_field :time_start %>
  </div>
  <div class="clearfix">
    <%= f.label :time_end %>
    <%= f.text_field :time_end %>
  </div>
<div class="clearfix">
    <%= f.label :name, "Give it a name" %>
    <%= f.text_field :name %>
  </div>
  <div class="clearfix">
    <%= f.label :buddy_ids, "Invite Your Buddies" %>
    <%= f.collection_select :buddy_ids, current_user.buddies, :id, :name,{:multiple => true},{:multiple => "multiple", :id => "buddy_id_select_#{@study_session.id || 0}", :class => "chzn-select buddy_id_select", "data-placeholder" => "Select buddies"} %>
  </div>
  <div class="clearfix">
    <%= f.label :offering_id, "Course" %>
    <%= f.collection_select :offering_id, current_user.offerings, :id, :name,{:include_blank => "Choose a course"},{:class => "chzn-select", "data-placeholder" => "No course", :id => "offering_id_select_#{@study_session.id || 0}"} %>
  </div>
 </div>
  <div class="popover-footer">
    <%= f.hidden_field :calendar, :value => true %>
    <%= f.submit 'Schedule Studyhall', class: 'btn primary' %>
    <%= link_to 'Cancel', '#', class: 'btn cancel_popover', 'data-link-id' => 'new_calendar_button' %>
  </div>
<% end %>
