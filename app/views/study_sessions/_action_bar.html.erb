<div class="action_bar">
  <div class="container">
    <div class="buttons left">
      <% if @index %>
        <%= link_to "Start A Studyhall", new_study_session_path(:link_id => "new_study_session_button1"), :class => "btn primary popover_button", :id => "new_study_session_button1", :remote => true %>
      <% elsif @show %>
        <%= link_to "X", study_sessions_path, :class => "btn" %>
      <% end %>
    </div>
    <h3><%= flash[:action_bar_message] %></h3>
    <div class="buttons right">
      <% if @index%>
        <a href="" class="btn">Filter</a>
        <span id="items_layout_switcher">
          <%= link_to 'Grid', { layout: :grid }, 'data-layout' => 'grid', :class => 'btn' %>
          <%= link_to 'List', { layout: :list }, 'data-layout' => 'list', :class => 'btn' %>
        </span>
        <%= link_to "Edit", study_sessions_path(:edit_all => true), :class => "btn", :id => "edit_all" %>
      <% end %>
    </div>
  </div>
</div>

<div id="popover_container" class="modal_dialog"></div>
