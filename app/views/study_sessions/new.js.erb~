var button = $("#new_study_session_button1");

var pop_cont1 = {trigger: "manual",
                placement: "below-right",
                offset: 10,
                horizontalOffset: 25,
                html: true,
                help: function(){return "<%=j render :partial => 'help' %>";},
                title: function(){return "Start A Study Hall";},
                content: function(){return "<%=j render :partial => 'form', :locals => {:study_session => @study_session} %>";}
		};

$("#new_study_session_button1").live('click', function() {
	$("#new_study_session_button1").popover(pop_cont1);
	$("#new_study_session_button1").popover("show");
	$(".chzn-select").chosen();
	styleFileInputs();
	$("#new_study_session .fake-file").css({position: "relative", top: "-34px"});
	initWindowResize();
	return false;
	});

var button2 = $("#new_calendar_button");

var pop_cont2 = {trigger: 'manual',
                placement: "below-right",
                offset: 10,
                horizontalOffset: 25,
                html: true,
                title: function(){return "Schedule a New StudyHall";},
                content: function(){return "<%=j render :partial => 'calendar_form' %>";}
		};

button2.click(function() {
	e.preventDefault();
	$(this).popover(pop_cont2);
	$(this).popover("show");
	});

