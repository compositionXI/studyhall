<% if flash[:notice] %>
  <div class="alert alert-message success span7">
    <a class="close" href="#">×</a>
    <%= flash[:notice] %>
  </div>
<% end %>

<% if flash[:error] %>
  <div class="alert alert-message error span7">
    <a class="close" href="#">×</a>
    <%= flash[:error] %>
  </div>
<% end %>

    <center>
      <div class="messages_landing_wrapper">
        <%= image_tag "/assets/MailIconBig.png"%>
        <p>
          <h1> Missing activation email? </h1>

        </p>
        <p>
        <h2>
          Please check your spam folder. 
        </h2>
        </p>
        <p>If it's not in there, enter your email address below and we'll send another message to you. 
        </p>





<%= form_tag "/activations", :method => "POST", :class => "form-stacked" do |f| %>
  <div class="clearfix">
    <%= label_tag :Email_Address, nil, :style => "width: 210px;" %> 
    <div class="input"><%= text_field_tag 'email', @email %></div>
  </div>
  <div>
    <%= submit_tag 'Resend Activation Email', :class => "btn primary"%>
    <%= link_to 'Back', root_path, :class => "btn" %>
  </div>
<% end %>
</div>
</center>
