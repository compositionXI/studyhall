<div class="row show-grid">
  <div class="span8 columns offset4">
    <h3>Sign Up</h3>
    <div>
      <%= form_for @user, :html => {:class => "form-stacked with_columns", :multipart => true} do |f| %>
        <%= f.error_messages %>
        <div class="clearfix">
          <%= f.label :email %> 
          <div class="input"><%= f.text_field :email %></div>
        </div>
        <div class="clearfix">
          <%= f.label :password %> 
          <div class="input"><%= f.password_field :password %></div>
        </div>
        <div class="clearfix">
          <%= f.label :custom_url %> 
          <div class="input"><%= f.text_field :custom_url %></div>
        </div>
        <div class="clearfix">
          <%= f.submit "Join StudyHall", :class => "btn primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
