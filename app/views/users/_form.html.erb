<%= form_for @user, :html => {:class => "form-stacked"} do |f| %>
  <div class="clearfix">
    <%= f.label "Login", :login %> 
    <div class="input"><%= f.text_field :login %></div>
  </div>
  <div class="clearfix">
    <%= f.label "Password", :password %> 
    <div class="input"><%= f.password_field :password %></div>
  </div>
  <div class="clearfix">
    <%= f.label "Password Confirmation", :password_confirmation %>
    <div class="input"><%= f.password_field :password_confirmation %></div>
  </div>
  <div class="clearfix">
    <%= f.label "Name", :name %>
    <div class="input"><%= f.text_field :name %></div>
  </div>
  
  <%- if @current_user && @current_user.has_role?("Admin") %>
    <div class="clearfix">
      <%= f.label "Role", :role %> 
      <div class="input"><%= f.select( "role", UserRole.all.collect {|r| [r.name]} )%></div>
    </div>
  <% end %>
  <div class="clearfix">
    <%= f.label "Gender", :gender %>
    <div class="input"><%= f.select( "gender", %w[Male Female] )%></div>
  </div>
  <div class="clearfix">
    <%= f.label "School", :school %>
    <div class="input"><%= f.text_field :school %></div>
  </div>
  <div class="clearfix">
    <%= f.label "Email", :email %>
    <div class="input"><%= f.text_field :email %></div>
  </div>
  <div class="clearfix">
    <%= f.label "Major", :major %>
    <div class="input"><%= f.text_field :major %></div>
  </div>
  <div class="clearfix">
    <%= f.label "GPA", :gpa %>
    <div class="input"><%= f.text_field :gpa %></div>
  </div>
  <div class="clearfix">
    <%= f.label "Fraternity", :fraternity %>
    <div class="input"><%= f.text_field :fraternity %></div>
  </div>
  <div class="clearfix">
    <%= f.label "Sorority", :sorority %>
    <div class="input"><%= f.text_field :sorority %></div>
  </div>
  <%= f.submit "Submit", :class => "btn primary" %>
<% end %>