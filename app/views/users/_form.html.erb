<%= form_for @user, :html => {:class => "form-stacked with_columns", :multipart => true} do |f| %>
      <fieldset>
        <div class="clearfix">
          <%= image_tag @user.avatar_url %>
        </div>
        <div class="clearfix">
          <%= f.label :avatar %>
          <div class="input"><%= f.file_field :avatar %></div>
        </div>
        <% if @user.has_avatar? %>
          <div class="clearfix">
            <%= f.label "Delete Image" %>
            <div class="input"><%= check_box_tag :delete_avatar %></div>
          </div>
        <% end %>
        <div class="clearfix">
          <%= f.label :bio %> 
          <div class="input"><%= f.text_area :bio %></div>
        </div>
        <div class="clearfix">
          <%= f.label :custom_url %> 
          <div class="input"><%= f.text_field :custom_url %></div>
        </div>
        <div class="clearfix">
          <%= f.label :School %>
          <div class="input"><%= f.collection_select :school_id, School.all, :id, :name, {}, :class => "chzn-select" %></div>
        </div>
        <div class="clearfix">
          <%= f.label :Major %>
          <div class="input"><%= f.text_field :major %></div>
        </div>
        <div class="clearfix">
          <%= f.label :courses %>
          <div class="input"><%= f.collection_select :enrollments, Offering.find_all_by_school_id(@user.school), :id, :course_listing, {:selected => selected_courses_for(@user)}, { :multiple => true, :class => "chzn-select", :name => "user[offering_ids][]"} %></div>
        </div>
        <div class="clearfix">
          <%= f.label :GPA %>
          <div class="input"><%= f.text_field :gpa %></div>
        </div>
        <div class="clearfix gender">
          <%= f.label :Gender %>
          <div class="input"><%= f.select( "gender", %w[Male Female], :prompt => "Select" )%></div>
        </div>
        <div class="clearfix fraternity">
          <%= f.label :Fraternity %>
          <div class="input"><%= f.text_field :fraternity %></div>
        </div>
        <div class="clearfix sorority">
          <%= f.label :Sorority %>
          <div class="input"><%= f.text_field :sorority %></div>
        </div>
        <div class="clearfix">
          <%= f.label :sports_and_clubs %>
          <div class="input"><%= text_field_tag "extracurriculars_list" %></div>
        </div>
  </div>
  <div class="clearfix">
    <%= f.submit "Submit", :class => "btn primary" %>
    <%= link_to 'Cancel', users_path, :class => "btn" %>
  </div>
  </fieldset>
<% end %>

<script>
$(document).ready(function(){
  $(".chzn-select").chosen()
});

</script>
