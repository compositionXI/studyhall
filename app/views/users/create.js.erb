<% if @user.new_record? %>
  <% @user.errors.each do |attr,error| %>
    $("#user_<%= attr.to_s %>").twipsy({placement: "below",trigger: "manual"});
    $("#user_<%= attr.to_s %>").twipsy("show");
  <% end %>
<% else %>
  $("#new_user").animate({right: 2000});$("#success_message").animate({left:"50%"})
<% end %>
