<% if @user.new_record? %>
  <% @user.errors.each do |attr,error| %>
    $("#user_<%= attr.to_s %>").twipsy({placement: "below",trigger: "manual"});
    $("#user_<%= attr.to_s %>").twipsy("show");
  <% end %>
<% else %>
  $("#user_email, #user_passsword, #user_custom_url").twipsy("hide");
  $("#new_user").fadeOut();
  $("#success_message").fadeIn();
<% end %>
