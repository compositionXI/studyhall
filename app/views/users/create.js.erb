<% if @user.new_record? %>
  <% @user.errors.each do |attr,error| %>
    $('#info_message').removeClass('in')
    $('#new_user').addClass('in')
    $("#user_<%= attr.to_s %>")
      .attr('title','<%= attr.to_s %> <%= error %>' )
      .twipsy({placement: "below", trigger: "manual", animate: false, offset: 2})
      .twipsy("show");      
  <% end %>
<% else %> 
  $('.twipsy').hide();
  $("#new_user").remove();
  $("#success_message").addClass('in')
<% end %>
