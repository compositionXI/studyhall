<div class="homepage_subbar sub_section">
  <div class="user_greeting left">
    <%= image_tag @current_user.avatar_url("medium")%>
    <span class="name"><h3>Hi, <span class="highligh_text"><%= "#{@current_user.name}"%></span>!</h3></span>
  </div>
  <div class="standard_actions right">
    <%= link_to "Start a Studyhall", new_study_session_path, :class => "btn" %>
    <%= link_to "Take Notes", new_note_path, :class => "btn" %>
  </div>
</div>

<div class="clear"></div>

<div class="sidebar left">
  <div class="sub_section">
    <div class="friend_list">
      <div class="sub_section">
        <div class="left">Buddies</div>
        <div class="right"><%= link_to "View All >>", "#"%></div>
        <div class="clear"></div>
      </div>
      <ul class="unstyled">
        <li><%= image_tag "/assets/generic_avatar_medium.png"%></li>
        <li><%= image_tag "/assets/generic_avatar_medium.png"%></li>
        <li><%= image_tag "/assets/generic_avatar_medium.png"%></li>
        <li><%= image_tag "/assets/generic_avatar_medium.png"%></li>
      </ul>
    </div>
  </div>
  <div class="sub_section">
    Campus News
  </div>
  <div class="sub_section">
    <ul class="unstyled">
      <li>News Item</li>
      <li>News Item</li>
      <li>News Item</li>
    </ul>
  </div>
</div>

<div class="notebook_list_container grid">
  <ol class="notebook_list">
    <%= render partial: 'notes/list_item', collection: @unsorted_notes, as: :note %>
    <%= render partial: 'notebooks/list_item', collection: @notebooks, as: :notebook %>
  </ol>
</div>