<div class="homepage_subbar sub_section">
  <div class="row">
    <div class="user_greeting span4">
      <%= image_tag @current_user.avatar_url("medium")%>
      <span class="name"><h3>Hi, 
      <%= link_to @current_user do %>
        <span class="highligh_text">
          <%= @current_user.name %>
        </span>
      <% end %>
      !</h3></span>
    </div>
    <% if flash[:notice] %>
      <div class="alert alert-message success span7">
          <a class="close" href="#">Ã—</a>
          <%= flash[:notice] %>
      </div>
    <% else %>
      <div class="span6"></div>
    <% end %>
    <div class="right">
      <div class="standard_actions span5">
        <%= link_to "Take Notes", new_note_path, :class => "btn" %>
        <%= link_to "Start a Studyhall", new_study_session_path, :class => "btn primary" %>
      </div>
    </div>
  </div>
</div>
<div class="clear"></div>

<div class="sidebar left">
  <%= render "shared/buddies_preview" %>
  <div class="sub_section">
    Your Activity
  </div>
  <div class="sub_section">
    <ul class="unstyled">
      <li>Activity Item</li>
      <li>Activity Item</li>
      <li>Activity Item</li>
    </ul>
  </div>
  <div class="sub_section">
    Campus News
  </div>
  <div class="sub_section">
    <ul class="unstyled">
      <li>News Item</li>
      <li>News Item</li>
      <li>News Item</li>
    </ul>
  </div>
</div>

<div class="notebook_list_container <%= items_layout %>">
  <ol class="notebook_list">
    <%= render partial: 'users/course_list', collection: @current_user.offerings, as: :offering, :locals => {:wrapper_class => "wrapper_large"} %>
  </ol>
</div>