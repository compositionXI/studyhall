<li class="search_result note">
  <div>
  <h3><%= link_to truncate(note.name, length: 100), note%></h3>
  <label><h6><%=note.created_at.strftime("Authored %m/%d/%Y by ")%><%= link_to(note.user.name, note.user) %></h6></label>
  <% if current_user.can_view?(note) %>
    <%= link_to "VIEW", note_path(note), class: 'btn right'%>
  <% else %>
    <%= link_to "REQUSET ACCESS", request_access_note_path(note), remote: true, class: 'btn right request_note_access_button' %>
  <% end %>
  </div>
  <p>
    <dl class="info narrow">
      <dt>Notebook</dt>
      <% if note.notebook.shareable %>
        <dd><%= link_to note.notebook.name, note.notebook %></dd>
      <% else %>
        <dd><%= note.notebook.name %></dd>
      <% end %>
    </dl>
    <dl class="info narrow">
      <dt>Course</dt>
      <dd><div class="note_content"><%= note.course.title %></div></dd>
    </dl>
  </p>
  <div class="clearfix"></div>
</li>
