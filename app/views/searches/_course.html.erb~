    <%= link_to "Drop this class", "/users/171/drop_class_searches/#{offering.id}", :class => "btn hidden right", :id => "drop_class_#{offering.id}", :remote => true, :method => :delete %>
    <%= link_to "Add this class","/users/171/add_class/#{offering.id}", :class => "btn right", :id => "add_class_#{offering.id}", :remote => true, :method => :post %>
  <%end%>
