<%= form_tag({:controller => "searches", :action => "sort"}, :remote => true) do %>
  <%= hidden_field_tag 'keywords', keywords %>
  <%= hidden_field_tag 'type', type %>
  <%if type == "course"%>
    <%= select_tag "c_options", options_for_select([["Course title","title"],["Department name","dept"]], ["Course title","title"]) %>
  <%elsif type == "note"%>
    <%= select_tag "n_options", options_for_select([["Note name","name"],["Author name","owner"],["Course title","course"],["Date authored","created"]], ["Note name","name"]) %>  <%end%>
  <%= submit_tag "Sort", :class => "btn primary"%>
<% end %>
<%= link_to_next_page @search.courses(params[:page] || 1).results, "See more results", class: 'more_results', remote: true, params: { category: "courses"} %>
